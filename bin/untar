#!/bin/bash

filename=$1
extension="${filename##*.}"

if [ "$extension" == "gz" ]; then
    tar -zxvf $filename
elif [ "$extension" == "tar" ]; then
    tar -xvf $filename
elif [ "$extension" == "bz2" ]; then
    tar jxf $filename
elif [ "$extension" == "tbz2" ]; then
    tar xf $filename
elif [ "$extension" == "tgz" ]; then
    tar -zxvf $filename
else
    cat `which untar`
fi

