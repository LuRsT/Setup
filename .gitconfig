[alias]
    #I like using the interactive mode to make complex commits
    ai = add --interactive

    # All the aliases relate to commits. Note that
    # they are grouped by common prefixes, so I don't
    # confuse what I want done by accident.
    c = commit
    # commit with a message
    cm = commit -m
    cma = commit -a -m

    # amending the previous commit
    ca = commit --amend
    #caa = commit -a --amend -C HEAD

    cl = clean -fd
    cp = cherry-pick

    # reset
    # soft resets
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    ## hard resets
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh1 = reset HEAD^^ --hard

    # shortcuts for commands
    s = status --short -b
    ss = !hr && git status --short -b
    d = diff
    ds = diff --stat
    dc = diff --cached
    dcs = diff --stat --cached
    a = add
    ch = checkout
    b = branch
    l = log --stat
    f = fetch
    r = reset
    p = pull
    show-graph = log --graph --abbrev-commit --pretty=oneline
    show-all = log --color=auto --abbrev-commit --graph --pretty=format:\"%h %an @%ar %s\" --all

    verbs  = "!git log --pretty=format:'%s' | cut -d \" \" -f 1 | sort | uniq -c | sort -nr"
    curses = "!git log --pretty=format:'%s' | tr '[:upper:]' '[:lower:]' | tr '[:space:]' '\n' | sort | uniq -c | sort -nr | grep -iE '(fuck|shit|bitch|damn|piss)'"
    find   = !git --no-pager log --pretty='format:%H %s %N' | grep '$1'
    g = grep --break --heading --line-number
    plush = "!git pull && git push"
    ctags = !.git/hooks/ctags
[apply]
    whitespace = nowarn
